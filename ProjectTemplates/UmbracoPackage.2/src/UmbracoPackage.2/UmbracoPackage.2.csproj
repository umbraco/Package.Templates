  </ItemGroup>

  <ItemGroup>
    <None Remove="App_Plugins\UmbracoPackage.2\Lang\en-US.xml" />
    <None Remove="App_Plugins\UmbracoPackage.2\UmbracoPackage.2.controller.js" />
    <None Remove="App_Plugins\UmbracoPackage.2\UmbracoPackage.2.css" />
    <None Remove="App_Plugins\UmbracoPackage.2\WelcomeDashboard.html" />
  </ItemGroup>
</Project>
